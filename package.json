{
    "name": "wordpress-salts",
    "main": "./lib/wordpress-salts",
    "version": "0.2.3",
    "description": "Context-aware WordPress salt key insertion for PHP, YAML and DotEnv files without the need of an internet-connection",
    "scripts": {
        "build": "webpack --mode production",
        "dev": "webpack --mode none --watch",
        "lint": "tslint --project ./",
        "prepublishOnly": "npm run build",
        "precommit": "npm run lint"
    },
    "keywords": [
        "wordpress",
        "wordpress salts",
        "cryptography"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/idleberg/atom-wordpress-salts"
    },
    "homepage": "https://atom.io/packages/wordpress-salts",
    "bugs": {
        "url": "https://github.com/idleberg/atom-wordpress-salts/issues"
    },
    "license": "MIT",
    "engines": {
        "atom": ">=1.0.0 <2.0.0"
    },
    "activationCommands": {
        "atom-workspace": [
            "WordPress-Salts:Insert"
        ]
    },
    "dependencies": {
        "wp-salts": "^1.0.0"
    },
    "devDependencies": {
        "@types/atom": "^1.36.1",
        "@types/node": "^12.6.8",
        "husky": "^3.0.1",
        "ts-loader": "^6.0.4",
        "tslint": "^5.18.0",
        "typescript": "^3.5.3",
        "webpack": "^4.36.1",
        "webpack-cli": "^3.3.6"
    }
}
